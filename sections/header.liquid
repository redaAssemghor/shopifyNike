<header class="header-nav">
  <div class="image-logo">
    {%- if section.settings['image-logo'] != blank -%}
      <a href="/">
        <img
          width="80"
          height="50"
          loading="lazy"
          src="{{ section.settings['image-logo'] | img_url: 'master' }}"
        >
      </a>
    {%- else -%}
      <a href="/">
        <img
          width="80"
          height="50"
          loading="lazy"
          src="{{ 'nike.png' | asset_url }}"
        >
      </a>
    {%- endif -%}
  </div>

  <div class="menu-container">
    <button id="btn">drop</button>
    <ul class="middle-nav-links">
      {% for link in linklists['main-menu'].links -%}
        <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor %}
    </ul>
  </div>

  <div class="right-nav-items">
    <form action="/search">
      <input class="search-nav" placeholder="search" type="search">
    </form>

    <a href="/cart" class="img-anchor">
      <img
        class="shopping-img"
        width="40"
        height="40"
        loading="lazy"
        src="{{ 'cart.png' | asset_url }}"
      >
    </a>
  </div>
</header>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btn = document.getElementById('btn');

    btn.addEventListener('click', () => {
      console.log('clicked');
      document.querySelector('.middle-nav-links').classList.toggle('drop-down');
    });
  });
</script>

<style>
  .shopping-img {
    cursor: 'pointer';
    margin-bottom: 10px;
  }
  .header-nav {
    z-index: 1000;
    position: relative;
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 1px;
    background-color: white;
    padding: 0 30px 0 30px;
  }

  @media only screen and (min-width: 768px) {
    .middle-nav-links {
      display: flex;
      font-size: 17px;
      font-weight: bold;
    }
  }

  .middle-nav-links li {
    list-style-type: none;
    padding: 10px;
  }

  .middle-nav-links li:hover {
    text-decoration: underline;
  }

  .middle-nav-links a {
    text-decoration: none;
    color: inherit;
  }

  .right-nav-items {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media only screen and (max-width: 768px) {
    .right-nav-items {
      margin-right: 30px;
    }
  }

  .img-anchor {
    margin-top: 25px;
    margin-left: 20px;
  }

  .search-nav {
    padding: 10px;
    margin-top: 10px;
    border-radius: 15px;
    border: none;
    background-color: rgb(239, 234, 234);
  }

  .image-logo {
    margin-top: 25px;
  }

  @media only screen and (max-width: 768px) {
    .middle-nav-links {
      display: none;
    }
  }

  .drop-down {
    top: 50%;
    right: 0;
    display: block;
    position: absolute;
    background-color: blue;
    z-index: 999;
  }

  #btn {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
  }

  @media only screen and (min-width: 768px) {
    #btn {
      display: none;
    }
  }
</style>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background color",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "image-logo",
      "label": "image logo"
    }
  ],
  "presets": [
    {
      "name": "banner"
    }
  ]
}
{% endschema %}
